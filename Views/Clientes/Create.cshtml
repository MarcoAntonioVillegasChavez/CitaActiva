<script>

jQuery(function ($) {
        $(function () {
            $('#fecha_nacimiento').datepicker({
                uiLibrary: 'bootstrap4',
                format: 'dd-mm-yyyy'
            });
        });
    });

    $(document).ready(function () {
        var actualizacionInd = @ViewBag.actualizacionInd;
       

        if (actualizacionInd == 0) {
            document.getElementById('divBtnRegistrar').style.display = 'block';
            document.getElementById('divBtnModificar').style.display = 'none';
        } else if (actualizacionInd == 1) {
            document.getElementById('divBtnRegistrar').style.display = 'none';
            document.getElementById('divBtnModificar').style.display = 'block';
        }
    });
</script>
